extends ./base.pug

block content  
    form.writeForm(action="/createBoard" method="POST")
        .writeWrapper
            .writewrapper__quide TITLE
            .writewrapper__content 
                input(type="text" name="title")

        .writeWrapper
            .writewrapper__quide AUTHOR
            .writewrapper__content 
                input(type="text" name="author")

        .descWrapper

extends ./base.pug

block content  
    form.writeForm(action="#" method="POST")
        .writeWrapper
            .writewrapper__quide TITLE
            .writewrapper__content 
                input(type="text" name="title" value=data.title readonly)

        .writeWrapper
            .writewrapper__quide AUTHOR
            .writewrapper__content 
                input(type="text" name="author" value=data.author readonly)

        .descWrapper
            .descWrapper__quide DESC
            .descWrapper__content
                textarea(name="desc"  readonly)=data.description

        

    form.listForm(action="/" method="GET")
        input(type="submit" value="LIST")

    if dev
        form.deleteForm(action="/detailBoard" method="POST")
            input(type="hidden" name="id" value=data._id)
            input(type="submit" value="Delete")

        form.updateForm(action="/edit" method="GET")
            input(type="hidden" name="id" value=data._id)
            input(type="submit" value="edit Page")
        
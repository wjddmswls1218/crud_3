extends ./base.pug

block content  
    form.writeForm(action="#" method="POST")
        .writeWrapper
            .writewrapper__quide TITLE
            .writewrapper__content 
                input(type="text" name="title" value=data.title breadonly)

        .writeWrapper
            .writewrapper__quide AUTHOR
            .writewrapper__content 
                input(type="text" name="author" value=data.author readonly)

        .descWrapper
            .descWrapper__quide DESC
            .descWrapper__content
                textarea(name="desc"  readonly)=data.description

        

    form.listForm(action="/" method="GET")
        input(type="submit" value="LIST")